# Auto-detect text files and perform LF normalization
* text=auto

# Force LF line endings for shell scripts
*.sh text eol=lf

# Docker files
Dockerfile text auto
docker-compose.yml text auto
docker-compose.yaml text auto

# Export ignore rules
example.tex export-ignore
example.pdf export-ignore
venv/
__pycache__/
*.pyc
outputs/
reports/
logs/
.gui_log.txt
validation_pipeline.log
*.pdf
*.xlsx
*.csv
